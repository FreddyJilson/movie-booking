@using System.ComponentModel
@inject IHttpClientFactory _client;
@inject NavigationManager _navigationManager;
@inject ISnackbar Snackbar;

<MudDialog>
    <DialogContent>
        <MudField Label="" Variant="Variant.Filled" Adornment="Adornment.End"
                  AdornmentIcon="@Icons.Material.Outlined.CheckCircle" AdornmentColor="Color.Success">
           @_navigationManager.Uri@UrlLink
        </MudField>
        Select the full text and Ctrl + C to copy the link and paste it in a browser.
    </DialogContent>
    
    <DialogActions>
        <MudButton OnClick="Ok">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code{

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string UrlLink { get; set; }
    
    void Ok() {
        MudDialog.Cancel();
        _navigationManager.NavigateTo("/", true);
    }

}